div.navbar.navbar-default.navbar-static-top(ng-controller='NavbarController')

  div.container
    div.navbar-header
      button.navbar-toggle.pull-left(type='button', ng-click='nav.isCollapsed = !nav.isCollapsed',ui-sref='ongoing') Back

.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main(ui-view='')
    .panel-heading
      p
        h4.text-ellipsis(style="color:#1750a9" title='{{$ctrl.data.CandidateCase.Candidate.name}}') {{$ctrl.data.CandidateCase.Candidate.name}}
    ul.list-group(ng-if="$ctrl.data.CandidateCase.CaseAddressVerification")
      .panel.panel-info
        .panel-heading Visiting address
        .panel-body {{$ctrl.data.CandidateCase.CaseAddressVerification.visiting_address}}
      .panel.panel-info
        .panel-heading Visiting person name
        .panel-body {{$ctrl.data.CandidateCase.CaseAddressVerification.visiting_person_name}}

      .panel.panel-info
        .panel-heading Relation with candidate
        .panel-body {{$ctrl.data.CandidateCase.CaseAddressVerification.relation_with_candidate}}

      .panel.panel-info(ng-show="$ctrl.data.CandidateCase.CaseAddressVerification.image")
        .panel-heading File
        .panel-body
          a(target="_blank" ng-href=' {{$ctrl.URLS.QVERIFY_API}}/case_address_verifications/{{$ctrl.data.CandidateCase.CaseAddressVerification.id}}/getFile?access_token={{$ctrl.AccessToken}}') download

      .panel.panel-info
        .panel-heading House Type
        .panel-body {{$ctrl.data.CandidateCase.CaseAddressVerification.house_type}}

      .panel.panel-info(style="color:#383f44")
        .panel-heading Years of staying
        .panel-body {{$ctrl.data.CandidateCase.CaseAddressVerification.years_of_staying}}

      // criminal //
    ul.list-group(ng-if="$ctrl.data.CandidateCase.CaseCriminalVerification")
